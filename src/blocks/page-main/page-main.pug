//- Все примеси в этом файле должны начинаться c имени блока (page-main)

mixin page-main(classes)

  //- Принимает:
  //-   classes    {string} - список классов
  //- Вызов:
        +page-main('some-class')

  -
    // список классов
    let allClasses = '';
    if(typeof(classes) !== 'undefined' && classes) {
      for (let item of classes.split(',')) {
        allClasses = allClasses + item.trim();
      }
    }

  div(class=`${allClasses.length > 0 ? `${allClasses} ` : ``}page-main`)&attributes(attributes)
    block
