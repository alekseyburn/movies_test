{
  "name": "Movies",
  "version": "1.0.0",
  "description": "Установка: выполнить в папке проекта: `npm i`.",
  "main": "gulpfile.js",
  "author": "Aleksey Korshakov",
  "repository": {
    "type": "git",
    "url": "https://github.com/alekseyburn/ab-start-project.git"
  },
  "scripts": {
    "start": "gulp",
    "test": "npm run test:pug && npm run test:style && npm run test:js",
    "test:pug": "glob-exec \"src/**/*.pug\" -- \"pug-lint {{files.join(' ')}}\"",
    "test:style": "stylelint \"src/**/*.scss\" --syntax=scss",
    "test:js": "eslint src/blocks/**/*.js src/js/**/*.js",
    "build": "gulp build",
    "deploy": "cross-env gulp build && gulp deploy",
    "img:opt": "gulp optimizeImages",
    "critical": "gulp criticalCssToHtml",
    "lint-staged": "lint-staged --no-stash"
  },
  "lint-staged": {
    "*.scss": "stylelint --syntax=scss",
    "*.{js,pug,md}": "editorconfig-cli",
    "*.pug": "pug-lint",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "csscomb": "^4.3.0",
    "object-fit-images": "^3.2.4",
    "svg4everybody": "^2.1.9"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.12",
    "browserslist": "^4.12.0",
    "cpy": "^8.1.0",
    "critical": "^1.3.9",
    "cross-env": "^7.0.2",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "get-classes-from-html": "^1.0.1",
    "gh-pages": "^2.2.0",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-debug": "^4.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-pretty-html": "^2.0.10",
    "gulp-pug": "^4.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-svgstore": "^7.0.1",
    "gulp-uglify": "^3.0.2",
    "gulp-webp": "^4.0.1",
    "gulp.spritesmith": "^6.11.0",
    "husky": "^4.2.5",
    "imagemin-pngquant": "^8.0.0",
    "lint-staged": "^10.2.2",
    "merge-stream": "^2.0.0",
    "mkdirp": "^1.0.4",
    "path": "^0.12.7",
    "postcss-import": "^12.0.1",
    "postcss-inline-svg": "^4.1.0",
    "postcss-object-fit-images": "^1.1.2",
    "pug-lint": "^2.6.0",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.17.1",
    "through2": "^3.0.1",
    "vinyl-buffer": "^1.0.1",
    "webpack": "^4.43.0",
    "webpack-stream": "^5.2.1"
  }
}
